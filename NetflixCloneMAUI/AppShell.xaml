<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NetflixCloneMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NetflixCloneMAUI.Pages"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#545454"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="hometab"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Games"
            Icon="game"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage1" />
        <ShellContent
            Title="New &amp; Hot"
            Icon="brand_netflix"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage2" />
        <ShellContent
            Title="Downloads"
            Icon="download"
            ContentTemplate="{DataTemplate pages:MainPage}"
            Route="MainPage3" />
    </TabBar>
    

</Shell>
